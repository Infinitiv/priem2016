h1 Отчет об ошибках
h2= @campaign.name
- unless @errors[:dups_numbers].nil? || @errors[:dups_numbers].empty?
  h3= "Повторяющиеся номера заявлений"
  ul
    - @errors[:dups_numbers].each do |applications|
      - applications.each do |application|
        li= link_to "%04d" % EntrantApplication.find(application).application_number, entrant_application_path(application)
    
- unless @errors[:lost_numbers].nil? || @errors[:lost_numbers].empty?
  h2= "Пропущенные номера заявлений"
  p= @errors[:lost_numbers].join(', ')

